<head>
  <meta charset="UTF-8">
  <title>My Unhealthy Friend</title>
  <link rel="stylesheet" href="/public/css/style.css">
</head>

<div class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="page-title">Welcome! Please login here.</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">EMAIL:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">PASSWORD:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">LOGIN</button>
      </div>
    </form>
  </div>
  <div class="login-card">
    <h2 class="page-title">First time user? Please register here.</h2>
    <form class="form signup-form">
        <div class="form-group">
        <label for="first-name-signup">FIRST NAME:</label>
        <input class="form-input" type="text" id="first-name-signup" />
      </div>
        <div class="form-group">
        <label for="last-name-signup">LAST NAME:</label>
        <input class="form-input" type="text" id="last-name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">EMAIL ADDRESS:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">PASSWORD:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
        <div class="form-group">
        <label for="weight-signup">WEIGHT (kg):</label>
        <input class="form-input" type="text" id="weight-signup" />
      </div>
        <div class="form-group">
        <label for="height-signup">HEIGH (cm):</label>
        <input class="form-input" type="text" id="height-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">SIGNUP</button>
      </div>
    </form>
  </div>
</div>
<script src="./js/login.js"></script>
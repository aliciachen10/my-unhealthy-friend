<link
  rel="stylesheet"
  href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
  integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
  crossorigin="anonymous"
/>
<link href="../public/css/style.css" rel="stylesheet" />

{{#if loggedIn}}
  <div class="menu-container">

    <div class="card-header col-md-12 text-center">
      <h2>
        üèãÔ∏è Exercise History 
      </h2>
    </div>
    <div class="container">
      <div class="row">
        <!-- This is the form for adding a new exercise -->
        <div class="card add-exercise-container col-md-4">
          <h2>
            Log your exercise here:
          </h2>
          <form class="new-exercise-form">

            <label for="exercise-type">Choose an exercise type:</label>
            <select name="exercise-type" id="exercise-type">
              <option value="running">Running</option>
              <option value="swimming">Swimming</option>
              <option value="cycling">Cycling</option>
            </select>
            <br />
            <label for="distance">
              exercise distance (in miles):
            </label>
            <textarea
              id="distance"
              name="distance"
              rows="1"
              cols="10"
            ></textarea>
            <label for="duration">
              exercise duration (in minutes):
            </label>
            <textarea
              id="duration"
              name="duration"
              rows="1"
              cols="10"
            ></textarea>
            <br />
            <label for="weight">
              Current weight (in kg):
            </label>
            <br />
            <textarea id="weight" name="weight" rows="1" cols="10"></textarea>
            <br />
            <br />
            <br />
            <button type="submit" value="Submit" class="btn btn-primary">
              Submit
            </button>
          </form>

          
        </div>

        <div class="recommendations-div">
            {{recommendations}}
        </div>
      </div>
    </div>
  </div>
  <div class="clear-class">
    {{#each exercises as |exercise|}}
      <div class="card exercise col-md-4">
        <div class="card-content">
          <h4 class="card-title">
            <a href="http://aliciachen10.github.io/weather-dashboard">
              Activity
            </a>
          </h4>
          <p class="">
            <p>User ID: {{exercise.user_id}}</p>
            <p>Distance: {{exercise.distance}} miles</p>
            <p>Duration: {{exercise.duration}} minutes</p>
            <p>Calories burned: {{exercise.calories_burned}} kCal</p>
            <p>When you did it: {{exercise.createdAt}}</p>
          </p>
        </div>
        <div class="card-read-more">
          <a
            href="http://github.com/aliciachen10/weather-dashboard"
            class="btn btn-link btn-block"
          >
            Get suggestions
          </a>
        </div>
      </div>

    {{/each}}
  </div>
{{else}}
  <a href="/login">You must login first to view this page</a>
{{/if}}
<script src="/js/add-exercise.js"></script>

